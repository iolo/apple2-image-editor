10 HOME
11 PRINT "BITMAP VIEWER"
12 INPUT "FILENAME:";F$
13 INPUT "WIDTH:";W
14 INPUT "HEIGHT:";H
20 HOME
60 A=24576: REM $6000
70 PRINT CHR$(4);"BLOAD ";F$;",A";A:PRINT
80 I=7
90 FOR Y = 1 TO H
100   FOR X = 1 TO W
110     HTAB X: VTAB Y
120     IF I = 7 THEN D = PEEK(A): A = A + 1
130     B = INT(D / (2^I))
140     IF B = 0 THEN PRINT "0";
150     IF B <> 0 THEN PRINT "1";: D = D - (2^I)
160     I = I - 1: IF I < 0 THEN I = 7
170   NEXT X
180 NEXT Y
190 END
